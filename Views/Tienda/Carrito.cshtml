<div class="modal fade" id="mdContinuarCompra" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <!--img class="me-3" style="width:60px" src="~/Imagenes/Logo/logo.png" /-->
                <h4 class="modal-title mt-3" id="exampleModalLabel">Completar Compra</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="credit-card-label mb-1 mt-2">Documento de Identidad</label>
