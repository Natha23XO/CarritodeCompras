}


<style>
    .small-image {
        width: 40px; /* Ajusta el tamaño según tus necesidades */
        height: 30px; /* Ajusta el tamaño según tus necesidades */
    }

    

    .btn-finalizar-compra {
        transition: display 0.5s;
        background-color: #FC9404;
        color: #fff;
        padding: 12px 24px;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-size: 18px;
    }

        .btn-finalizar-compra:hover {
            background-color: #E17E00;
            color: #fff;
        }

    .btn-terminar-compra {
        transition: display 0.5s;
        background-color: #FC9404;
        color: #fff;
        padding: 12px 24px;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-size: 18px;
    }

        .btn-terminar-compra:hover {
            background-color: #E17E00;
            color: #fff;
