                    </div>
                    <div class="col-md-6">
                        <label class="credit-card-label mb-1 mt-2">Nombres</label>
                        <input type="text" class="form-control credit-inputs" placeholder="Nombres" id="trj_nombre">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="credit-card-label mb-1 mt-2">Apellido Paterno</label>
                        <input type="text" class="form-control credit-inputs" placeholder="Primer Apellido" id="trj_apellido1">
                    </div>
                    <div class="col-md-6">
                        <label class="credit-card-label mb-1 mt-2">Apellido Materno</label>
                        <input type="text" class="form-control credit-inputs" placeholder="Segundo Apellido" id="trj_apellido2">
                    </div>
                </div>
                <span class="type d-block mt-3 mb-1">Tipo de tarjeta</span>
                <label class="radio">
                    <input type="radio" name="card" value="payment" checked>
                    <span><img width="60" src="@Url.Content("~/Imagenes/Tarjetas/master.png")" /></span>
                </label>
                <label class="radio ml-2">
                    <input type="radio" name="card" value="payment">
                    <span><img width="60" src="@Url.Content("~/Imagenes/Tarjetas/visa.png")" /></span>
                </label>
                <label class="radio ml-2">
                    <input type="radio" name="card" value="payment">
                    <span><img width="65" src="@Url.Content("~/Imagenes/Tarjetas/maestro.png")" /></span>
                </label>
                <label class="radio ml-2">
                    <input type="radio" name="card" value="payment">
                    <span><img height="60" src="@Url.Content("~/Imagenes/Tarjetas/paypal.png")" /></span>
                </label>
                <div>
                    <label class="credit-card-label mb-1 mt-2">Número de tarjeta</label>
                    <input type="text" class="form-control credit-inputs" placeholder="0000 0000 0000 0000" id="trj_numero">
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="credit-card-label mb-1 mt-2">Vigencia</label>
                        <input type="text" class="form-control credit-inputs" placeholder="12/24" id="trj_vigencia">
                    </div>
                    <div class="col-md-6">
                        <label class="credit-card-label mb-1 mt-2">CVV</label>
                        <input type="text" class="form-control credit-inputs" placeholder="342" id="trj_cvv">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Regresar</button>
                <button type="button" class="btn btn-terminar-compra" id="btnProcesarPago">Confirmar Compra</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="mdprocesopago" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
